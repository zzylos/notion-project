# Notion API Configuration
# Copy this file to .env and fill in your values

# Your Notion API key (required for Notion integration)
# Get it from: https://www.notion.so/my-integrations
VITE_NOTION_API_KEY=secret_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Database IDs (at least one required)
# Copy from your Notion database URL: notion.so/{workspace}/{database_id}?v=...
# Format: xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx (with or without hyphens)

# Objectives/Missions database
VITE_NOTION_DB_MISSION=

# Problems database
VITE_NOTION_DB_PROBLEM=

# Solutions database
VITE_NOTION_DB_SOLUTION=

# Projects database
VITE_NOTION_DB_PROJECT=

# Deliverables/Design database
VITE_NOTION_DB_DESIGN=

# Property Mappings (optional - defaults shown)
# Customize if your Notion database uses different column names
VITE_MAPPING_TITLE=Name
VITE_MAPPING_STATUS=Status
VITE_MAPPING_PRIORITY=Priority
VITE_MAPPING_OWNER=Owner
VITE_MAPPING_PARENT=Parent
VITE_MAPPING_PROGRESS=Progress
VITE_MAPPING_DUE_DATE=Deadline
VITE_MAPPING_TAGS=Tags

# CORS Proxy (optional - defaults to corsproxy.io)
# For production, you should use your own proxy server
VITE_CORS_PROXY=https://corsproxy.io/?

# ============================================
# Production Settings
# ============================================

# Disable UI Configuration (optional)
# When set to 'true', users cannot modify API keys, database IDs,
# or property mappings through the web interface. All configuration
# must be done via this .env file. Recommended for production deployments.
VITE_DISABLE_CONFIG_UI=false

# Refresh Cooldown (optional - default: 2 minutes)
# Minimum time between data refreshes to prevent excessive API calls.
# Value is in minutes. Set to 0 to disable rate limiting.
VITE_REFRESH_COOLDOWN_MINUTES=2
